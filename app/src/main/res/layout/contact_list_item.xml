<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:gravity="start"
    android:orientation="vertical"
    android:padding="5dp">

    <FrameLayout
        android:id="@+id/contactImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/imgContact"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/imgDefault"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/avatar" />
    </FrameLayout>

    <TextView
        android:id="@+id/txtContactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/contactImg"
        android:layout_toEndOf="@+id/contactImg"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:srcCompat="@drawable/send"
        android:id="@+id/imageButton2"
        android:background="@android:color/white"
        android:layout_marginRight="17dp"
        android:layout_marginEnd="17dp"
        android:layout_alignTop="@+id/showThisFriend"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/contactImg" />

    <ImageButton
        android:layout_width="wrap_content"
        app:srcCompat="@drawable/location"
        android:id="@+id/showThisFriend"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/contactImg"
        android:layout_toLeftOf="@+id/imageButton2"
        android:layout_toStartOf="@+id/imageButton2"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp"
        android:layout_alignBottom="@+id/contactImg" />

</RelativeLayout>